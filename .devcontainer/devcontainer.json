{
    "name": "Blazor Dev Container",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.shell.linux": "/bin/bash"
            },
            "extensions": [
                "ms-dotnettools.csharp",
                "ms-azuretools.vscode-docker"
            ]
        }
    },
    "forwardPorts": [5031, 5086],
    "postCreateCommand": "dotnet restore"
}
